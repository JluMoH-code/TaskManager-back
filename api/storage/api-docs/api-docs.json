{
    "openapi": "3.0.0",
    "info": {
        "title": "Task Manager API",
        "description": "Description of Task Manager API",
        "version": "1.0.0"
    },
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Вход",
                "operationId": "ce5ef90f2ad7d4ab966397fd8ddd231d",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "No content"
                    },
                    "422": {
                        "description": "Unprocessable Content"
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "Выход",
                "operationId": "11d76349d4369c54169628716b62f9a9",
                "responses": {
                    "204": {
                        "description": "No content"
                    },
                    "422": {
                        "description": "Unprocessable Content"
                    }
                }
            }
        },
        "/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Регистрация",
                "operationId": "0e2da547a5af550417e8666500022fbf",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegistrationRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "No content"
                    },
                    "422": {
                        "description": "Unprocessable Content"
                    }
                }
            }
        },
        "/sanctum/csrf-cookie": {
            "get": {
                "tags": [
                    "csrf"
                ],
                "summary": "Метод для записи csrf куки в браузер",
                "operationId": "a2162b0e12e57cbec91259cc3d187526",
                "responses": {
                    "204": {
                        "description": "No content"
                    }
                }
            }
        },
        "/api/profile": {
            "get": {
                "tags": [
                    "profile"
                ],
                "summary": "Показ информации о текущем авторизованном пользователе",
                "operationId": "ede45b19680d6fb1319013a741a05734",
                "responses": {
                    "200": {
                        "$ref": "#/components/schemas/ProfileResource"
                    }
                }
            }
        },
        "/api/tasks": {
            "get": {
                "tags": [
                    "profile"
                ],
                "summary": "Показ задач авторизованного пользователя",
                "operationId": "d65f8818ec696dad558b47939034f1c5",
                "responses": {
                    "200": {
                        "description": "Список задач",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/TaskResource"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "test@test.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    }
                },
                "type": "object"
            },
            "RegistrationRequest": {
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Name"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "test@test.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "example": "password"
                    }
                },
                "type": "object"
            },
            "ProfileResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "Name"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "test@test.com"
                    }
                },
                "type": "object"
            },
            "TaskResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "title": {
                        "type": "string",
                        "example": "title"
                    },
                    "description": {
                        "type": "string",
                        "example": "description"
                    },
                    "deadline": {
                        "type": "string",
                        "format": "date-time",
                        "example": ""
                    },
                    "active": {
                        "type": "boolean",
                        "example": "true"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "auth",
            "description": "auth"
        },
        {
            "name": "csrf",
            "description": "csrf"
        },
        {
            "name": "profile",
            "description": "profile"
        }
    ]
}